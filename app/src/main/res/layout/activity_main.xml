<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MainActivity">

    <EditText
        android:id="@+id/ed_app_search"
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_search_edit_height"
        android:background="@null"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:hint="@string/app_search_hint"
        android:paddingStart="@dimen/app_item_offset_h"
        android:paddingEnd="@dimen/app_item_offset_h" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_app_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ed_app_search" />
</RelativeLayout>